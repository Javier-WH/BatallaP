{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "start": "node dist/src/server.js",
    "seed": "npx ts-node -r tsconfig-paths/register src/seed.ts",
    "db:sync-only": "npx ts-node -r tsconfig-paths/register -e \"(async () => { const sequelize = (await import('./src/config/database')).default; await import('./src/models/index'); await sequelize.authenticate(); await sequelize.sync({ force: true }); console.log('All models were synchronized successfully (force: true).'); })().catch((e) => { console.error(e); process.exit(1); });\"",
    "db:sync": "npm run db:sync-only && npm run seed",
    "seed:academic-structure": "ts-node -r tsconfig-paths/register src/seeders/academicStructureSeeder.ts",
    "seed:bulk-inscriptions": "ts-node -r tsconfig-paths/register src/seeders/bulkMatriculationsSeeder.ts",
    "seed:subject-groups": "ts-node -r tsconfig-paths/register src/seeders/subjectGroupsSeeder.ts",
    "seed:unregistered": "ts-node -r tsconfig-paths/register src/seeders/unregisteredStudentsSeeder.ts --count=100",
    "seed:full-reset": "npm run db:sync-only && npm run seed && npm run seed:academic-structure && npm run seed:subject-groups && ts-node -r tsconfig-paths/register src/seeders/bulkMatriculationsSeeder.ts --count=300 && npm run seed:unregistered"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@types/cheerio": "^0.22.35",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "cheerio": "^1.1.2",
    "connect-session-sequelize": "^8.0.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-session": "^1.18.2",
    "multer": "^2.0.2",
    "mysql2": "^3.16.0",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.2",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.3",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
